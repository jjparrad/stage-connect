<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.StageConnect" parent="Theme.Material3.DayNight.NoActionBar">
         <item name="colorPrimary">@color/dark_blue</item>
    </style>

    <style name="Theme.StageConnect" parent="Base.Theme.StageConnect" />

    <style name="dark">
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:background">@color/dark_blue</item>
        <item name="android:editTextColor">@color/dark_blue</item>
    </style>
    <style name="light">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:background">@color/light_gray</item>
        <item name="android:editTextColor">@color/dark_blue</item>
    </style>
    <style name="popout">
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:background">@color/blue</item>
    </style>
</resources>